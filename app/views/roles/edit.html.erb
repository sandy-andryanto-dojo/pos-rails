<% content_for :title do %>
<%= @page_name %>
<% end %>

<% content_for :content do %>

<h1 class="page-header"><%= @page_name %>
    <small>Management</small>
</h1>

<ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li><a href="javascript:void(0);">Master</a></li>
    <li><a href="<%= roles_path %>"><%= @page_name %></a></li>
    <li class="active">Edit Data</li>
</ol>

<%= render "shared/alert" %>


<% if @role.errors.full_messages.any? %>
<div class="alert alert-warning" alert-dismissable>
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
    <% @role.errors.full_messages.each do |msg| %>
        <p class="text-left"><i class="fa fa-warning"></i>&nbsp;<%= msg %></p>
    <% end %>
</div>
<% end %>


<div class="panel panel-default">
    <div class="panel-heading">
        <div class="clearfix">
            <div class="pull-left">
                <i class="fa fa-edit"></i>&nbsp;<strong>Edit Data</strong>
            </div>
            <div class="pull-right">
                <%= link_to '<i class="fa fa-rotate-left"></i>&nbsp;Back'.html_safe, roles_path,  class: "btn btn-sm btn-info" %>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <%= form_for(@role, html: { class: "form-horizontal", :"id" => "form-submit", :"role" => "form", :"enctype" => "multipart/form-data" }) do |f| %>

        <div class="form-group">
            <label class="control-label col-sm-2" for="name">Name :</label>
            <div class="col-sm-10">
                <%= text_field_tag :name, @role.name, class: 'form-control' %>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="description">Description :</label>
            <div class="col-sm-10">
                <%= text_area_tag :description, @role.description, class: 'form-control', rows: 8 %>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-success">
                    <i class="fa fa-save"></i>&nbsp;Save
                </button>
                <button type="reset" class="btn btn-warning">
                    <i class="fa fa-refresh"></i>&nbsp;Reset
                </button>
            </div>
        </div>


        <% end %>
    </div>
    <div class="panel-footer"></div>
</div>


<% end %>
